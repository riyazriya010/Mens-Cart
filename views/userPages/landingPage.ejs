.card {
      position: relative;
      overflow: hidden;
    }

    .card:hover img {
      transform: scale(1.1);
    }

    .card img {
      transition: transform 0.3s ease;
    }

    .overlay {
      position: absolute;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      background: rgba(0, 0, 0, 0.5);
      display: flex;
      justify-content: center;
      align-items: center;
      opacity: 0;
      transition: opacity 0.3s ease;
    }

    .card:hover .overlay {
      opacity: 1;
    }

    .icons {
      color: white;
      font-size: 24px;
      display: none;
      margin: 0 20px;
    }

    .card:hover .icons {
      display: flex;
    }
</style>

