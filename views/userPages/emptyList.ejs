<%- include('../userPartials/header') %>

<link rel="stylesheet" href="styles.css">
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.3/css/all.min.css" />

<style>
  .no-items-wishlist {
    padding: 50px;
    background-color: #f7f7f7;
    border: 1px solid #ddd;
    border-radius: 10px;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
    height: 300px;
  }

  #w-icon {
    font-size: 80px;
    color: #ccc;
    margin-bottom: 20px;
    animation: spin 2s infinite;
  }

  @keyframes spin {
    0% {
      transform: rotate(0deg);
    }
    100% {
      transform: rotate(360deg);
    }
  }

  .no-items-wishlist h2 {
    font-size: 24px;
    margin-bottom: 10px;
    font-weight: bold;
    color: #333;
  }

  .no-items-wishlist p {
    font-size: 18px;
    color: #666;
    margin-bottom: 20px;
  }

  .no-items-wishlist button {
    padding: 10px 20px;
    font-size: 18px;
    border-radius: 5px;
    background-color: #337ab7;
    color: #fff;
    border: none;
    cursor: pointer;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  }

  .no-items-wishlist button:hover {
    background-color: #23527c;
    box-shadow: 0 0 10px rgba(0, 0, 0, 0.4);
  }

  .no-items-wishlist::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-image: linear-gradient(to bottom, #f7f7f7, #fff);
    opacity: 0.5;
    z-index: -1;
  }

  /* Responsive Design */

  @media (max-width: 768px) {
    .no-items-wishlist {
      padding: 20px;
      height: 250px;
    }
    #w-icon {
      font-size: 60px;
    }
    .no-items-wishlist h2 {
      font-size: 20px;
    }
    .no-items-wishlist p {
      font-size: 16px;
    }
    .no-items-wishlist button {
      padding: 8px 15px;
      font-size: 16px;
    }
  }
  @media (max-width: 480px) {
    .no-items-wishlist {
      padding: 10px;
      height: 200px;
    }
    #w-icon {
      margin-top: 5%;
      font-size: 40px;
    }
    #icn{
      margin-top: 4%;
    }
    .no-items-wishlist h2 {
      font-size: 18px;
    }
    .no-items-wishlist p {
      font-size: 14px;
    }
    .no-items-wishlist button {
      padding: 6px 12px;
      font-size: 14px;
    }
  }
</style>

<body>
  <div class="container" style="margin-top: 7%;margin-bottom: 4%;">
    <div class="row">
      <div class="col-md-12 text-center">
        <div class="no-items-wishlist">
          <div class="wishlist-icon" id="w-icon">
            <i class="fas fa-heart" id="icn"></i>
          </div>
          <h2>Your wishlist is empty!</h2>
          <p>Looks like you haven't added any items to your wishlist yet.</p>
          <a href="/shop"><button class="btn btn-primary mb-4">Start Exploring</button></a>
        </div>
      </div>
    </div>
  </div>

  <script src="https://code.jquery.com/jquery-3.2.1.slim.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>

  <%- include('../userPartials/footer') %>
</body>