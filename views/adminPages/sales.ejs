                                                        <td style="text-align: center;">
                                                            <%= cartItem.productQuantity %>
                                                        </td>
                                                        <td style="text-align: center;">
                                                            <span>
                                                                ₹<%= cartItem.productPrice %>
                                                            </span>
                                                        </td>
                                                        <td style="text-align: center;">
                                                            <span>
                                                                <% if(cartItem.offerPrice) { %>
                                                                    ₹<%= cartItem.offerPrice %>
                                                                        <% }else{%>
