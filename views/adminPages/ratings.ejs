                <div class="row mt-3">
                  <div class="col">
                    <div class="table-responsive">

                      
                      <table class="table table-hover text-center table-bordered table-dark-bordered"">
                        <thead class="table-dark">
                          <tr>
                            <th>Product Name</th>
                            <th>No Of Star</th>
                            <th>Rating Description</th>
                            
                          </tr>
                        </thead>
                        <tbody>
                            <% ratings.forEach(rating => { %>
                          <tr>
                            <td> <%= rating.productName %> </td>
                            <td> <%= rating.noOfStars %>  </td>
                            <td> <%= rating.ratingDescription %>  </td>
                          </tr>
                         <% }) %>
                        </tbody>
                      </table>
                    </div>
                  </div>
                </div>
              </div>
          </div>
          </div>


  
        
       
  


      
